@page
@model SozcuWebApp.Pages.IndexModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sozcu Makale Listesi</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-5">
    <h1 class="mb-4">Sözcü Makale Listesi</h1>

    <!-- Arama Kutusu -->
    <form method="get" class="mb-3">
        <input type="text" name="query" placeholder="Başlık ara..." class="form-control" />
        <button type="submit" class="btn btn-primary mt-2">Ara</button>
    </form>

    <!-- Sonuçları Listele -->
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Başlık</th>
            <th>Bağlantı</th>
            <th>Tarih</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var article in Model.Articles)
        {
            <tr>
                <td>@article.Title</td>
                <td><a href="@article.Link" target="_blank">Link</a></td>
                <td>@article.Date.ToString("dd-MM-yyyy HH:mm")</td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>